@model IEnumerable<VentasApp.Models.TarjetaCredito>

@{
    ViewData["Title"] = "Index";
}

<h2>Tarjetas de credito disponibles</h2>

<p>
    <a asp-action="Create">Añadir nueva tarjeta de credito</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Saldo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Saldo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.UserName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TarjetaCreditoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.TarjetaCreditoId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.TarjetaCreditoId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
